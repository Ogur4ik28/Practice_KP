<Window x:Class="FunctionPlotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Function Plotter" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <TextBlock Text="Step (h): " VerticalAlignment="Center"/>
            <TextBox Name="StepTextBox" Width="100" Margin="5"/>
            <Button Name="PlotButton" Content="Plot" Click="PlotButton_Click"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Name="DataTable" TextWrapping="Wrap" VerticalAlignment="Top" Margin="10"/>
            <Canvas Name="GraphCanvas" Grid.Column="1" Background="White" Margin="10"/>
        </Grid>
    </Grid>
</Window>
